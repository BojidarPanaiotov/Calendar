<div class="modal fade" id="event-slot-modal" tabindex="-1" role="dialog" aria-labelledby="event-slot-modal-label"
    aria-hidden="true" data-day="" data-month="" data-year="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="event-slot-modal-label">Simple Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="js-date"></div>
            </div>
            <div class="modal-footer">
                {{#isEqualHelper user.role "admin"}}
                <button type="button" class="js-disable-button btn btn-danger">Disable Slot</button>
                <button type="button" class="js-enable-button btn btn-primary">Enable Slot</button>
                {{/isEqualHelper}}
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>